<%= form_for(@user, url: login_post_path) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= f.label :email %></div>
  <div><%= f.text_field :email %></div>
  <div><%= f.label :password %></div>
  <div><%= f.text_field :password %></div>
  <%= f.hidden_field :provider, :value => 'none', readonly: true %>
  <%= f.submit %>

<% end %>

<p><%= link_to('Log in with Facebook!', '/auth/facebook', method: :post) %></p>